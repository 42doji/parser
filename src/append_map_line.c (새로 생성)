#include "cub3d.h"

int	append_map_line(char ***map_lines, int *map_size, char *line, t_map *map)
{
	char	**new_map_lines;
	int		i;

	new_map_lines = (char **)malloc(sizeof(char *) * (*map_size + 2));
	if (!new_map_lines)
		return (0);
	i = 0;
	while (i < *map_size && (*map_lines)[i])
	{
		new_map_lines[i] = ft_strdup((*map_lines)[i]);
		if (!new_map_lines[i])
		{
			while (--i >= 0)
				free(new_map_lines[i]);
			free(new_map_lines);
			return (0);
		}
		i++;
	}
	new_map_lines[*map_size] = ft_strdup(line);
	if (!new_map_lines[*map_size])
	{
		while (--i >= 0)
			free(new_map_lines[i]);
		free(new_map_lines);
		return (0);
	}
	new_map_lines[*map_size + 1] = NULL;
	free_split(*map_lines);
	*map_lines = new_map_lines;
	(*map_size)++;
	return (1);
}
